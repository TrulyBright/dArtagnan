{
	"name": "@dartagnan/server",
	"private": true,
	"scripts": {
		"dev": "npx swc --watch",
		"build": "npx swc ./src -d ./dist",
		"clean": "rm -rf dist",
		"test": "vitest run",
		"test:watch": "vitest watch",
		"check-types": "tsc",
		"format-lint": "biome check src",
		"format-lint:fix": "biome check src --write",
		"format-test:fix": "biome format test --write"
	},
	"dependencies": {
		"@dartagnan/api": "workspace:*",
		"micromatch": "^4.0.8",
		"ws": "^8.18.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@swc/cli": "latest",
		"@swc/core": "latest",
		"@swc/jest": "latest",
		"@types/ws": "^8.5.10",
		"chokidar": "latest",
		"typescript": "latest",
		"vitest": "^2.0.2"
	},
	"imports": {
		"#*": "./src/*.ts",
		"#test/*": "./test/*.ts"
	}
}