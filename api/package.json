    "name": "@dartagnan/api",
    "private": true,
    "scripts": {
        "dev": "npx swc ./src --watch",
        "build": "npx swc ./src -d ./dist",
        "clean": "rm -rf dist",
        "check-types": "tsc"
    },
    "imports": {
		"#*": "./src/*.ts"
    },
    "exports": {
