        "./error": "./src/error.ts",
        "./event": "./src/event.ts",
        "./game": "./src/game.ts",
        "./player": "./src/player.ts",
        "./room": "./src/room.ts",
        "./user": "./src/user.ts"
    },
    "devDependencies": {
        "@swc/cli": "latest",
		"@swc/core": "latest",
        "chokidar": "latest",
        "typescript": "latest"
    }
}