{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "format-lint": {},
        "format-lint:fix": {
            "cache": false
        },
        "format-test:fix": {
            "cache": false
        },
        "test": {
            "dependsOn": ["^test"],
            "cache": false
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "clean": {
            "dependsOn": ["^clean"]
        }
    }
}